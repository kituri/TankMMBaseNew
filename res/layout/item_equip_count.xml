<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@drawable/bg_tech_small" >

    <com.kituri.app.widget.XRelativeLayout
        android:id="@+id/v_bk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@null" >

        <com.kituri.app.widget.XImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_equip_00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="S9"
                android:textColor="@color/td_highlight_text"
                android:textSize="@dimen/tv_size_medium_sml"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_icon"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_sp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@+id/tv_count"
                    android:layout_below="@+id/iv_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_equip"
                    android:src="@drawable/icon_equip_type_01" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text="99999"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tv_size_small_med"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </com.kituri.app.widget.XRelativeLayout>

</RelativeLayout>