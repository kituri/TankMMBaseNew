<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.kituri.app.widget.XRelativeLayout
        android:id="@+id/v_bk"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_dialog_and_other" >

        <ImageView
            android:id="@+id/iv_tech_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_tech_maingun_type_01" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_tech"
            android:gravity="center"
            android:text="改装火药"
            android:textColor="@color/td_highlight_text"
            android:textSize="@dimen/tv_size_medium_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:text="16"
            android:textColor="@color/td_highlight_text"
            android:textSize="@dimen/tv_size_medium_big"
            android:textStyle="bold"
            android:visibility="gone" />
    </com.kituri.app.widget.XRelativeLayout>

</RelativeLayout>