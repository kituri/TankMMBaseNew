<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_dialog_and_other"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" >

                <com.kituri.app.widget.XRelativeLayout
                    android:id="@+id/iv_icon"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_centerHorizontal="true" >
                </com.kituri.app.widget.XRelativeLayout>

                <ImageView
                    android:id="@+id/iv_ic_terrain"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_alignTop="@+id/iv_icon"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="草地丛林"
                android:textColor="@color/td_highlight_text"
                android:textSize="@dimen/tv_size_medium_big"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/cap_terrain_resistance"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tv_size_medium_med" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left"
                android:padding="4dp"
                android:text="@string/cap_terrain_effect"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tv_size_medium_med" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_resistance01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="草地丛林草地丛林草地丛林草地丛林草地丛林"
                android:textColor="@color/td_highlight_text_direction"
                android:textSize="@dimen/tv_size_medium_med" />

            <TextView
                android:id="@+id/tv_effect01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left"
                android:padding="4dp"
                android:text="草地丛林草地丛林草地丛林草地丛林草地丛林"
                android:textColor="@color/td_highlight_text_direction"
                android:textSize="@dimen/tv_size_medium_med" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_resistance02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="草地丛林草地丛林草地丛林草地丛林草地丛林"
                android:textColor="@color/td_highlight_text_direction"
                android:textSize="@dimen/tv_size_medium_med" />

            <TextView
                android:id="@+id/tv_effect02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left"
                android:padding="4dp"
                android:text="草地丛林草地丛林草地丛林草地丛林草地丛林"
                android:textColor="@color/td_highlight_text_direction"
                android:textSize="@dimen/tv_size_medium_med" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_resistance03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="草地丛林草地丛林草地丛林草地丛林草地丛林"
                android:textColor="@color/td_highlight_text_direction"
                android:textSize="@dimen/tv_size_medium_med" />

            <TextView
                android:id="@+id/tv_effect03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left"
                android:padding="4dp"
                android:text="草地丛林草地丛林草地丛林草地丛林草地丛林"
                android:textColor="@color/td_highlight_text_direction"
                android:textSize="@dimen/tv_size_medium_med" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp" >

            <com.kituri.app.widget.XTextView
                android:id="@+id/btn_ok"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_blue_high_light"
                android:gravity="center"
                android:text="@string/cap_btn_ok"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tv_size_medium_med" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>