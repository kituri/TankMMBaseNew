<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView 
            android:layout_width="match_parent"
    android:layout_height="1dp" 
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        
        android:background="@drawable/bg_dialog_and_other"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp" >

                <com.kituri.app.widget.XRelativeLayout
                    android:id="@+id/iv_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_dialog_and_other" />

                <ImageView
                    android:id="@+id/iv_tech"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@+id/iv_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/icon_tech_00" />

                <ImageView
                    android:id="@+id/iv_tech_type"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignBottom="@+id/iv_icon"
                    android:layout_alignLeft="@+id/iv_icon"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                   />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="改装火药"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/td_highlight_text"
                android:textSize="@dimen/tv_size_medium_big" />
        </LinearLayout>

        <GridView
            android:id="@+id/gv_statistics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:horizontalSpacing="1dp"
            android:numColumns="2"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp" 
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_special"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:padding="4dp"
            
            android:text="改装火药改装火药改装火药改装火药改装火药改装火药改装火药改装火药"
            android:textColor="@color/td_highlight_text_direction"
            android:textSize="@dimen/tv_size_medium_med" />
        
        <com.kituri.app.widget.XTextView 
            android:id="@+id/btn_ok"
            android:text="@string/cap_btn_ok"
            android:textColor="@android:color/white"
            android:layout_width="84dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/tv_size_medium_med"
            android:background="@drawable/btn_blue_high_light"
            />
        
    </LinearLayout>

</RelativeLayout>