<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/v_star_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/td_tank_list_item_height"
        android:layout_margin="10dp"
        android:background="@drawable/bg_tank_star_level_03" >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/td_tank_list_item_height" >

        <ImageView
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_tank_spg_su8" />

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/td_tank_list_item_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="top|left"
            android:text="su-8自行火炮"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_size_small_med"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:gravity="top|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_star_lv01"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/icon_rank_star" />

            <ImageView
                android:id="@+id/iv_star_lv02"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/icon_rank_star" />

            <ImageView
                android:id="@+id/iv_star_lv03"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/icon_rank_star" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>